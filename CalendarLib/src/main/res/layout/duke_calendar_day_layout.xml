<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/duke_calendar_day_view_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- 日期数字 -->
    <TextView
        android:id="@+id/duke_calendar_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <!-- 日期下边的中文、节假日文本 -->
    <TextView
        android:id="@+id/duke_calendar_day_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/duke_calendar_day_text"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/duke_calendar_day_holiday_flag"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignTop="@+id/duke_calendar_day_text"
        android:layout_toRightOf="@+id/duke_calendar_day_text"
        android:src="@drawable/ic_rest_day" />

</RelativeLayout>